<article class="poststyle">
  <div class="title">
    <h3>{{title}}</h3>
    <p>({{ post_body}})</p>
  </div>
  <div class="meta">
     Post by {{user.username}} on {{format_date created_at}}
    <a class ="metafoot" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>